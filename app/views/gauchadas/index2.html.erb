<h1>Listado de Logros</h1>
  <table class= "table2 table table-hover">
    <thead>
      <tr>
        <th> Descripcion</th>
        <th> Localidad </th>
        <th> Gauchada </th>
        <th> Estado </th>
        <th> Acciones </th>
      </tr>
    </thead>
<tbody>
  <% @gauchada.postulacions.all.each do |postu| %>
    <tr>
      <td> <%= postu.descripcion %> </td>
      <td> <%= postu.localidad %> </td>
      <td> <%= Gauchada.find(postu.gauchada_id).titulo%></td>
      <td> <%= postu.estado%> </td>
          <td>
          <%if(postu.estado != "Aceptado") && (postu.estado != "Rechazado") && (postu.estado != "Cumplido") && (postu.estado != "No cumplio")%>
            <%= link_to "Aceptar", aceptarPostulacion_path(@postulacion, :id => postu.id), class: 'btn btn-danger btn-sm' %>
          <% end %>
          <%if(postu.estado == "Aceptado")%>
            <%= link_to "Cumplio", cumplimientoPostulacion_path(@postulacion, :id => postu.id), class: 'btn btn-danger btn-sm' %>
            <%= link_to "No cumplio", inCumplimientoPostulacion_path(@postulacion, :id => postu.id), class: 'btn btn-danger btn-sm' %>
          <% end %>
        </td>
          <td>

    </tr>
<% end %>
</tbody>
</table>
