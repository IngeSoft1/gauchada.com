<div class="logros">
<%= form_for (@logro) do |f| %>
<%= f.label :nombre %>
<%= f.text_field :nombre ,required: true %>
<br></br>
<%= f.label :valor_minimo %>
<%= f.number_field :valor_min ,required: true %>
<br></br>

<%= f.label :valor_maximo %>
<%= f.number_field :valor_max ,required: true %>
<br></br>
<%= f.submit 'Guardar', :class => "btn btn-primary dropdown-toggle vermas"%>
<% end %>
</div>
