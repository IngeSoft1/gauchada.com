<div class='tabla-logro'>
  <table class= "table2 table table-hover">
    <thead>
      <tr>
        <th> Categoria</th>
        <th> Puntaje Inicial </th>
        <th> Puntaje Final </th>
        <th> Acciones </th>
      </tr>
    </thead>
<tbody>
  <% Logro.all.each do |logr| %>
    <tr>
      <td> <%= logr.nombre %> </td>
      <td> <%= logr.valor_min %> </td>
      <td> <%= logr.valor_max %> </td>
          <td><%= link_to "Editar", editarLogro_path(@logro, :id => logr.id), class: 'btn btn-info btn-sm' %>
          <%= link_to "Eliminar", eliminarLogro_path(@logro, :id => logr.id), class: 'btn btn-danger btn-sm',:data => { :confirm => 'Esta seguro que desea eliminar?'} %></td>
          <td>

    </tr>
<% end %>
</tbody>
</table>
</div>
